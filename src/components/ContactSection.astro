<section id="contacto" class="py-5 bg-light text-dark">
  <div class="container">
    <h2 class="text-center mb-4" data-aos="fade-up">Contacto</h2>

    <form
      id="contact-form"
      action="https://email.mji.imperial-net.com/api/contact"
      method="POST"
      class="mx-auto"
      style="max-width: 600px;"
    >
      <div class="mb-3" data-aos="fade-up" data-aos-delay="200">
        <label for="name" class="form-label">Nombre</label>
        <input
          type="text"
          class="form-control"
          id="name"
          placeholder="Tu nombre"
          required
        />
      </div>

      <div class="mb-3" data-aos="fade-up" data-aos-delay="300">
        <label for="email" class="form-label">Correo electrónico</label>
        <input
          type="email"
          class="form-control"
          id="email"
          placeholder="ejemplo@correo.com"
          required
        />
      </div>

      <div class="mb-3" data-aos="fade-up" data-aos-delay="400">
        <label for="message" class="form-label">Mensaje</label>
        <textarea
          class="form-control"
          id="message"
          rows="4"
          placeholder="¿En qué podemos ayudarte?"
          required></textarea>
      </div>

      <div data-aos="fade-up" data-aos-delay="500">
        <button type="submit" class="btn btn-primary">Enviar</button>
      </div>

      <div id="form-message" class="mt-3"></div>
    </form>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form");
    const formMessage = document.getElementById("form-message");
    const submitButton = form.querySelector("button[type='submit']");

    form.addEventListener("submit", async (event) => {
      event.preventDefault();

      if (!form.checkValidity()) {
        form.reportValidity();
        return;
      }

      // Resetear mensaje anterior y cambiar estado del botón
      formMessage.textContent = "";
      formMessage.className = "";
      submitButton.disabled = true;
      submitButton.textContent = "Enviando...";

      const data = {
        name: document.getElementById("name").value,
        email: document.getElementById("email").value,
        message: document.getElementById("message").value
      };

      try {
        const response = await fetch(form.action, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "Accept": "application/json"
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          formMessage.className = "alert alert-success mt-3";
          formMessage.textContent = "Mensaje enviado correctamente.";
          form.reset();
        } else {
          formMessage.className = "alert alert-danger mt-3";
          formMessage.textContent = "Ocurrió un error al enviar el mensaje.";
        }
      } catch (err) {
        formMessage.className = "alert alert-danger mt-3";
        formMessage.textContent = "Error de conexión con el servidor.";
      } finally {
        // Restaurar el botón
        submitButton.disabled = false;
        submitButton.textContent = "Enviar";
      }
    });
  });
</script>



