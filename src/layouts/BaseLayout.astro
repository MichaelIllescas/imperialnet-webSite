---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
const { title, description } = Astro.props;
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Title and Description -->
  <title>{title || "Imperial Net"}</title>
  <meta
    name="description"
    content={description || "Desarrollamos soluciones de software a medida"}
  />

  <!-- SEO Keywords -->
  <meta
    name="keywords"
    content="desarrollo de software, soluciones digitales, aplicaciones web, sistemas a medida, Imperial Net"
  />

  <!-- Author -->
  <meta name="author" content="Imperial Net" />

  <!-- Robots -->
  <meta name="robots" content="index, follow" />

  <!-- Open Graph (para Facebook, LinkedIn, WhatsApp) -->
  <meta property="og:title" content="Imperial Net" />
  <meta
    property="og:description"
    content="Desarrollamos soluciones de software a medida para potenciar tu negocio."
  />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://imperial-net.com/" />
  <meta property="og:image" content="https://imperial-net.com/img/logo.png" />

  <!-- Twitter Card (para Twitter/X) -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Imperial Net" />
  <meta
    name="twitter:description"
    content="Desarrollamos soluciones de software a medida para potenciar tu negocio."
  />
  <meta
    name="twitter:image"
    content="https://imperial-net.com/img/logo.png"
  />

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="favicon.ico" />

  <!-- Bootstrap Icons -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
  />

  <!-- Animaciones CSS -->
  <link rel="stylesheet" href="https://unpkg.com/@animxyz/core" />

  <!-- AOS CSS -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
  />
</head>


  <body>
    <Navbar />

    <main style="margin-top: 100px;">
      <slot />
      <WhatsAppButton />
    </main>

    <!-- Cargar AOS y luego inicializar -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js" defer onload="AOS.init({ duration: 1000, once: false });"></script>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      defer
    ></script>
  </body>
</html>
