<section id="contacto" class="py-5 bg-light text-dark">
  <div class="container">
    <h2 class="text-center mb-4" data-aos="fade-up">Contacto</h2>
    
    <form class="mx-auto" style="max-width: 600px;" data-aos="fade-up" data-aos-delay="100">
      <div class="mb-3" data-aos="fade-up" data-aos-delay="200">
        <label for="name" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="name" placeholder="Tu nombre" />
      </div>

      <div class="mb-3" data-aos="fade-up" data-aos-delay="300">
        <label for="email" class="form-label">Correo electrónico</label>
        <input type="email" class="form-control" id="email" placeholder="ejemplo@correo.com" />
      </div>

      <div class="mb-3" data-aos="fade-up" data-aos-delay="400">
        <label for="message" class="form-label">Mensaje</label>
        <textarea class="form-control" id="message" rows="4" placeholder="¿En qué podemos ayudarte?"></textarea>
      </div>

      <div data-aos="fade-up" data-aos-delay="500">
        <button type="submit" class="btn btn-primary">Enviar</button>
      </div>
    </form>
  </div>
</section>
