---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
const { title, description } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title || "Imperial Net"}</title>
    <meta
      name="description"
      content={description || "Desarrollamos soluciones de software a medida"}
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
    <!-- Animaciones css -->
    <link rel="stylesheet" href="https://unpkg.com/@animxyz/core" />
    <!-- AOS CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
    />
  </head>

  <body>
    <Navbar />

    <main style="margin-top: 100px;">
      <slot />
      <WhatsAppButton />
    </main>

    <!-- Cargar AOS y luego inicializar -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js" defer onload="AOS.init({ duration: 1000, once: false });"></script>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      defer
    ></script>
  </body>
</html>
